@model IEnumerable<Film>

@{ Layout = "_Layout"; ViewBag.Title = "All Film";}
 
<h2>All Film</h2>
<a asp-action="AddFilm" class="btn btn-sm btn-primary">Add Film</a>
<a asp-action="GetFilm" class="btn btn-sm btn-secondary">Get Film</a>
 
<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Director</th>
            <th>Hero</th>
            <th>Heroine</th>
            <th>Rating</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Id</td>
                <td>@r.FilmName</td>
                <td>@r.Director</td>
                <td>@r.Hero</td>
                <td>@r.Heroine</td>
                <td>@r.Rating</td>
                <td>
                    <a asp-action="UpdateFilm" asp-route-id="@r.Id">
                        <img src="/icon/edit.png" />
                    </a>
                </td>
                <td>
                    <form asp-action="DeleteFilm" method="post">
                        <input type="hidden" value="@r.Id" name="FilmId" />
                        <input type="image" src="/icon/close.png" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
  <script type="text/javascript">
    google.charts.load("current", {packages:['corechart']});
    google.charts.setOnLoadCallback(drawChart);
    function drawChart() {
      var data = google.visualization.arrayToDataTable([
        ["Film", "Rating", { role: "style" } ];
      ]);

      var view = new google.visualization.DataView(data);
      view.setColumns([0, 1,
                       { calc: "stringify",
                         sourceColumn: 1,
                         type: "string",
                         role: "annotation" },
                       2]);

      var options = {
        title: "All movie Ratings out of 100%",
        width: 500,
        height: 300,
        bar: {groupWidth: "95%"},
        legend: { position : "absolute" },
      };
      var chart = new google.visualization.ColumnChart(document.getElementById("columnchart_values"));
      chart.draw(view, options);
  }
  </script>
<div id="columnchart_values" style="width: 900px; height: 300px;"></div>